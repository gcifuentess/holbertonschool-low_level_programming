CC = gcc
SRC = main.c holberton.c  # $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $^ -o $(NAME)

%.o: %.c %.h
	$(CC) $(CFLAGS) -c $^

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all
